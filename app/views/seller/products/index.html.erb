
<h1>商品管理</h1>
<%= button_to '添加商品', new_seller_product_path,method: :get,class:"btn btn-primary" %>
<table class="table">
  <thead>
    <tr>
      <th>名称</th>
      <th>价格</th>
      <th>图像</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @seller_products.each do |seller_product| %>
      <tr>
        <td><%= seller_product.name %></td>
        <td><%= seller_product.price %></td>
        <td><%= image_tag (seller_product.avatar_url(:thumb_mini)) if seller_product.avatar %></td>
        <td><%= seller_product.verified %></td>
        <td><%= link_to '显示详情', seller_product %></td>
        <td><%= link_to '编辑', edit_seller_product_path(seller_product) %></td>
        <td><%= link_to '删除', seller_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
