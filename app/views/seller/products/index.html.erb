<p id="notice"><%= notice %></p>

<h1>Listing Seller Products</h1>

<table class="table">
  <thead>
    <tr>
      <th>名称</th>
      <th>价格</th>
      <th>图像</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @seller_products.each do |seller_product| %>
      <tr>
        <td><%= seller_product.name %></td>
        <td><%= seller_product.price %></td>
        <td><%= image_tag (seller_product.avatar_url(:thumb)) if seller_product.avatar %></td>
        <td><%= seller_product.verified %></td>
        <td><%= link_to 'Show', seller_product %></td>
        <td><%= link_to 'Edit', edit_seller_product_path(seller_product) %></td>
        <td><%= link_to 'Destroy', seller_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

