
<div class="cart">
    <%= render @purchaser_cart %>
</div>

<% @products.each do |p| %>
<div class="entry">
  <%= image_tag (p.avatar_url(:thumb)) if p.avatar %>
  <h4><%= p.name %></h4>
  <div class="price_line">
    <span class="price">价格:<%= p.price %></span><br/>
    <span class="price">数量:<%= p.quantity %></span>
    <div class="image">

   </div>
    <%= button_to "添加到购物车",purchaser_lists_path(:product_id => p) ,:remote => true,class:"btn btn-inline btn-info clickout"%>
  </div>
</div>

<% end %>
<%= will_paginate @products %>
